<%- model_class = PaperSubmission -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th width="20%"><%= model_class.human_attribute_name(:name) %></th>
      <th width="20%"><%= model_class.human_attribute_name(:email) %></th>
      <th width="40%"><%= model_class.human_attribute_name(:title) %></th>
	  <th width="15%">Status</th>
      <th width="5%">Ações</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>
			<%= link_to @paper_submission.name, edit_paper_submission_url(:token => @paper_submission.token) %>
		</td>
        <td><%= @paper_submission.email %></td>
        <td><%= @paper_submission.title %></td>
		<td><%= @paper_submission.status.description if @paper_submission.status %></td>
        <td>
          <%= link_to "Editar",
                      edit_paper_submission_url(:token => @paper_submission.token), :class => 'btn btn-mini btn-primary' %>
        </td>
      </tr>
  </tbody>
</table>
