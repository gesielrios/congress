<%= form_for @paper_submission, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>

  <%= error_messages_for @paper_submission %>

  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'input-xxlarge', :required => "required" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'input-xxlarge', :required => "required" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'input-xxlarge', :required => "required", :type => "email" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :paper, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :paper, :required => "required" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Enviar", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("cancel")),
                root_path, :class => 'btn' %>
  </div>
<% end %>
