<div class="page-header">
	<h2>Esqueceu sua senha ?</h2>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
	<%= devise_error_messages! %>
	<div class="control-group">
		<%= f.label :email, :class => "control-label" %>
		<div class="controls">
			<%= f.email_field :email, :required => "required" %>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<%= link_to "Login", new_session_path(resource_name), :class => "btn-link" %>
		</div>
	</div>
	
	<div class="form-actions">
		<%= f.submit "Enviar",  :class => "btn btn-primary" %>
		<%= link_to t('.cancel', :default => t("cancel")), root_path, :class => 'btn' %>
	</div>
<% end %>
