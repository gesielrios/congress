<% if resource.errors.any? %>
  <div id="error_explanation">
    <h2>
		<%= pluralize(resource.errors.count, "error") %> 
		impediu(ram) que o(a) <%= t resource.class.model_name.human %> 
		ser(em) salvo(s):
    </h2>

    <ul>
    <% resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
