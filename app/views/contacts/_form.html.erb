<%= form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>

	<%= error_messages_for @contact %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field input-xlarge', :required => "required" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field input-xlarge', :required => "required", :type => "email" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :subject, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :subject, :class => 'text_field input-xlarge', :required => "required" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :menssage, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :menssage, :class => 'text_area input-xlarge', :rows => 4, :cols => 30, :required => "required" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Enviar", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("cancel")),
                root_path, :class => 'btn' %>
  </div>
<% end %>
