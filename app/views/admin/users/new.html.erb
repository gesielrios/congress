<%- model_class = User -%>
<div class="page-header">
  <h2><%=t '.title', :default => t('helpers.titles.new', :model => model_class.model_name.human,
                                 :default => "#{model_class.model_name.human}") %></h2>
</div>

<%= form_for [:admin, @user], :html => { :class => 'form-horizontal'} do |f| %>
	<%= error_messages_for @user %>
	
	<div class="control-group">
    	<%= f.label :name, :class => 'control-label' %>
    	<div class="controls">
      		<%= f.text_field :name, :class => 'text_field input-xlarge', :required => "required"  %>
    	</div>
  	</div>
	<div class="control-group">
    	<%= f.label :email, :class => 'control-label' %>
    	<div class="controls">
      		<%= f.email_field :email, :class => 'text_field input-xlarge', :required => "required"  %>
    	</div>
  	</div>
	<div class="control-group">
    	<%= f.label :password, :class => 'control-label' %>
    	<div class="controls">
      		<%= f.password_field :password, :class => 'text_field input-xlarge', :required => "required"  %>
    	</div>
  	</div>
	<div class="control-group">
    	<%= f.label :password_confirmation, :class => 'control-label' %>
    	<div class="controls">
      		<%= f.password_field :password_confirmation, :class => 'text_field input-xlarge', :required => "required"  %>
    	</div>
  	</div>

  <div class="form-actions">
    <%= f.submit "Enviar", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("cancel")),
                admin_users_path, :class => 'btn' %>
  </div>
<% end %>

