<%- model_class = PaperSubmission -%>
<div class="page-header">
  <h2><%=t '.title', :default => t('helpers.titles.new', :model => model_class.model_name.human,
                                 :default => "#{model_class.model_name.human}") %></h2>
</div>

<%= form_for [:admin, @paper_submission], :html => { :class => 'form-horizontal'} do |f| %>
	<%= error_messages_for @paper_submission %>


	<dl class="dl-horizontal">
	  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
	  <dd><%= @paper_submission.title %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
	  <dd><%= @paper_submission.name %></dd>
	  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
	  <dd><%= @paper_submission.email %></dd>
	</dl>

	<div class="control-group">
    	<%= f.label :status, :class => 'control-label' %>
    	<div class="controls">
      		<%= f.collection_select(:status_id, Status.all, :id, :description, :prompt => true) %>
    	</div>
  	</div>


  <div class="form-actions">
    <%= f.submit "Enviar", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("cancel")),
                admin_paper_submissions_path, :class => 'btn' %>
  </div>
<% end %>

